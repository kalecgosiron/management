<!--pages/login/login.wxml-->
<cu-custom bgColor="bg-red">
  <view slot="content">登录页面</view>
</cu-custom>
<view class="padding flex flex-direction">
  <image src="https://7465-test-75be2d-1258925975.tcb.qcloud.la/work/logo.jpg?sign=277f443daf7b2e913c6953942fb30ca2&t=1573302352" style="height:230rpx;margin-left:15rpx;"></image>
</view>
<view>
  <view class="cu-form-group" style="border-top: 1rpx solid #eee;">
    <view class="title">账号</view>
    <input bindinput="userNameInput" name="username" placeholder="点击此处输入账号"></input>
  </view>
  <view class="cu-form-group" style="border-bottom: 1rpx solid #eee;">
    <view class="title">密码</view>
    <input bindinput="passWordInput" name="password" placeholder="点击此处输入密码" type="password"></input>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn lg bg-cyan" bindtap="loginBtnClick" key="value">登录</button>
  </view>
</view>